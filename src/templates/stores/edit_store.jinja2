{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Edit Store</h1>
    </div>
    <div class="form-size">
        <form method="post">
            <div class="form-group">
                <label for="name">Store Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Store Name" value="{{ store.name }}">
            </div>
            <div class="form-group">
                <label for="url_prefix">Store URL Prefix</label>
                <input type="text" class="form-control" id="url_prefix" name="url_prefix" placeholder="http://..." value="{{ store.url_prefix }}" aria-describedby="storeURLPrefixHelp">
                <span id="storeURLPrefixHelp" class="help-block">What characters do all URLs in this store start with? (e.g. http://www.amazon.com)</span>
            </div>
            <div class="form-group">
                <label for="tag_name">Tag Name</label>
                <input type="text" class="form-control" id="tag_name" name="tag_name" placeholder="span" value="{{ store.tag_name }}" aria-describedby="storeTagNameHelp">
                <span id="storeTagNameHelp" class="help-block">What is the HTML tag of the item that contains the item price? (usually <code>span</code>)</span>
            </div>
            <div class="form-group">
                <label for="query">Search query</label>
                <input type="text" class="form-control" id="query" name="query" placeholder='{"id": "price-now"}' value='{{ store.query | tojson }}' aria-describedby="queryHelp">
                <span id="queryHelp" class="help-block">What JSON query would we have to do to find the specific tag that contains the item price? Remember to use double quotes(" ").</span>
            </div>
            <div class="form-group">
                <label for="tag_name">Tag Name 2</label>
                <input type="text" class="form-control" id="tag_name2" name="tag_name2" placeholder="span" value="{{ store.tag_name2 }}" aria-describedby="storeTagNameHelp2">
                <span id="storeTagNameHelp2" class="help-block">What is the HTML tag of the item that contains the item price? (usually <code>span</code>)</span>
            </div>
            <div class="form-group">
                <label for="query">Search query 2</label>
                <input type="text" class="form-control" id="query2" name="query2" placeholder='{"id": "price-now"}' value='{{ store.query2 | tojson }}' aria-describedby="queryHelp2">
                <span id="queryHelp2" class="help-block">What JSON query would we have to do to find the specific tag that contains the item price? Remember to use double quotes(" ").</span>
            </div>
            <button type="submit" class="btn btn-warning">Update</button>
        </form>
    </div>
{% endblock %}
