{% extends "base.jinja2" %}
{% block content %}
<h1>Alerts</h1><br>
    <div class="list-group">
        {% for alert in alerts %}
            <a href="/alerts/{{ alert._id }}" class="list-group-item {{ 'list-group-item-warning' if not alert.active else '' }}">
                <h3 class="list-group-item-heading">
                    {{ '<span class="glyphicon glyphicon-pause"></span>' if not alert.active else '' }}<u>{{ alert.item.name }}</u>
                </h3>
                <p class="list-group-item-text">Your budget: <strong>{{ alert.price_limit }}</strong></p>
                <p class="list-group-item-text">Last price found: <strong>{{ alert.item.price }}</strong></p>
                <p class="list-group-item-text">Last checked on: <strong>{{ alert.last_checked.strftime("%d-%m-%Y %H:%M") }}</strong></p>
            </a>
        {% endfor %}
    </div>
<a class="btn btn-info" href="{{ url_for('alerts.create_alert') }}"><strong>Create New</strong></a>
{% endblock %}
