{% extends "base.jinja2" %}
{% block content %}
<h1>{{ alert.item.name }}</h1><br>
<div class="panel">
    <p>Your budget: <strong>{{ alert.price_limit }}</strong></p>
    <p>Last price found: <strong>{{ alert.item.price }}</strong></p>
    <p>Last checked on: <strong>{{ alert.last_checked.strftime('%d-%m-%Y at %H:%M') }}</strong></p>
    <a class="btn btn-default btn-alert" href="{{ alert.item.url }}" role="button">View Game On Steam</a>
    <a class="btn btn-success btn-alert" href="{{ url_for('alerts.check_alert_price', alert_id=alert._id) }}" role="button">Update Price Manually</a>
    <br>
    <a class="btn btn-warning btn-alert" href="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}" role="button">Edit</a>
    {% if alert.active %}
        <a class="btn btn-danger btn-alert" href="{{ url_for('alerts.deactivate_alert', alert_id=alert._id) }}" role="button">Deactivate</a>
    {% else %}
        <a class="btn btn-info btn-alert" href="{{ url_for('alerts.activate_alert', alert_id=alert._id) }}" role="button">Activate</a>
        <a class="btn btn-danger btn-alert" href="{{ url_for('alerts.delete_alert', alert_id=alert._id) }}" role="button">Delete</a>
    {% endif %}
</div>
<h4><a href="{{ url_for('users.user_alerts') }}" title="Your Alerts"><span class="glyphicon glyphicon-chevron-left"></span> Go back</a></h4>
{% endblock %}
